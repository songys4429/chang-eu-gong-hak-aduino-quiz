void setup() {
  pinMode(7, INPUT_PULLUP);
  Serial.begin(9600);
}

void loop() {
  int a = digitalRead(7);
  Serial.println(a);
  delay(500);
}

---------------

import processing.serial.*;
Serial p;
void setup(){
  size(400,400);
  p = new Serial(this,"COM5", 9600);
}
void draw(){
  if(p.available()>0){
    String m = p.readStringUntil('\n');
    if(m != null){
       print(m);
       if(m.indexOf('1')==0) background(0,0,255);
       if(m.indexOf('0')==0) background(255,0,0);
    }
  }
}
